<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--首页-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!--字符过滤器:DatabaseActionServlet-->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.wang.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/service/*</url-pattern>
    </filter-mapping>

    <!--表单过滤器:DatabaseActionServlet-->
    <filter>
        <filter-name>FormFilter</filter-name>
        <filter-class>com.wang.filter.FormFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FormFilter</filter-name>
        <url-pattern>/service/*</url-pattern>
    </filter-mapping>

    <!--数据库操作:DatabaseActionServlet-->
    <servlet>
        <servlet-name>DBService</servlet-name>
        <servlet-class>com.wang.service.DatabaseActionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DBService</servlet-name>
        <url-pattern>/service/*</url-pattern>
    </servlet-mapping>

    <!--上传图片servlet-->
    <servlet>
        <servlet-name>UpImageService</servlet-name>
        <servlet-class>com.wang.service.UpImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpImageService</servlet-name>
        <url-pattern>/upimage.do</url-pattern>
    </servlet-mapping>

    <!--获取图片servlet-->
    <servlet>
        <servlet-name>GetImageService</servlet-name>
        <servlet-class>com.wang.service.GetImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetImageService</servlet-name>
        <url-pattern>/getimage.do</url-pattern>
    </servlet-mapping>

</web-app>